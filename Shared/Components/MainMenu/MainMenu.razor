  </div>
}

<div class="open-close-icon @stateClass" @onclick="toggleState">
  <span></span>
  <span></span>
  <span></span>
</div>

@code {
  private bool state = false;

  private string stateClass {
    get {
      return state ? "open" : string.Empty;
    }
  }

  private void toggleState() {
    state = !state;
  }
}